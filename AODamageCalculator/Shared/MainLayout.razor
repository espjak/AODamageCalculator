@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <img src="anarchy-red-free-hd-image.png" alt="" height="40" width="40" />
        <MudText class="ml-2 mr-2">A damage calculator for Anarchy Online</MudText>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Weapon calculator</MudNavLink>
        </MudNavMenu>
        <MudNavMenu>
            <MudNavLink Href="/nukes" Match="NavLinkMatch.All">NT nukes</MudNavLink>
        </MudNavMenu>
    </MudAppBar>
    <MudMainContent>
        <MudContainer Fixed="true">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
